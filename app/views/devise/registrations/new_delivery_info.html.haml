%h2 住所情報登録
= form_for @delivery_info, url:delivery_info_path do |f|
  = render "devise/shared/error_messages", resource: @delivery_info
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :first_name_hurigana
    %br/
    = f.text_field :first_name_hurigana
  .field
    = f.label :last_name_hurigana
    %br/
    = f.text_field :last_name_hurigana
  .field
    = f.label :postal_code
    %br/
    = f.text_field :postal_code
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :street
    %br/
    = f.text_field :street
  .field
    = f.label :building_name
    %br/
    = f.text_field :building_name
  .field
    = f.label :room_number
    %br/
    = f.text_field :room_number
  .field
    = f.label :phone_number
    %br/
    = f.telephone_field :phone_number
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
