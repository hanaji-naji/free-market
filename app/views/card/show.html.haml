= render partial: 'items/sub-header'


-if flash[:card_delete_alert]
  .flash-message
    = flash[:card_delete_alert]

%main.credits-new-main
  .main__center

    %h1.content-head
      登録クレジットカード情報

    .content-main
      .content
        .content__title
          %h2.content__title__name
            カード番号：
            = "**** **** **** " + @default_card_information.last4
      
        .content__title
          %h2.content__title__name
            有効期限：
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
      = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        %input{ type: "hidden", class: "submit-btn", name: "card_id", value: "" }
        %button.card-delete-btn 削除する

= render partial: 'items/sub-footer'