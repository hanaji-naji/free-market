= render partial: 'items/header'


.user-my-page-main
  .my-container
    .my-side
      .my-side__navigation
        .my-side__navigation__list
          %li
            = link_to '#', class: 'my-side__navigation__list__item active' do
              マイページ
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              お知らせ
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              いいね！一覧
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              出品する
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              下書き一覧
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              出品した商品-出品中
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              出品した商品–取引中
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              出品した商品–売却中
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              購入した商品–取引中
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              購入した商品–過去の取引
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              ニュース一覧
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              評価一覧
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              ガイド
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              お問い合わせ
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
        .my-side__navigation__head メルペイ
        .my-side__navigation__list
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              売上・振込申請
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              ポイント
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
        .my-side__navigation__head 設定
        .my-side__navigation__list
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              プロフィール
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              発送元・お届け先住所
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            - if current_user.card
              = link_to card_index_path, class: 'my-side__navigation__list__item', data: { turbolinks: false} do
                クレジットカード登録・削除
                .my-side__navigation__list__item__icon
                  = icon('fas', 'angle-right')
            - else
              = link_to new_card_path, class: 'my-side__navigation__list__item', data: { turbolinks: false} do
                クレジットカード登録・削除
                .my-side__navigation__list__item__icon
                  = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              メール/パスワード
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              本人情報
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              電話番号の確認
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')
          %li
            = link_to '#', class: 'my-side__navigation__list__item' do
              ログアウト
              .my-side__navigation__list__item__icon
                = icon('fas', 'angle-right')

    .my-content
      .mypage-content
        = link_to '#', class: 'content-link' do
          %figure
            = image_tag asset_path('member_photo_noimage_thumb.png'), class: "icon"
          %h2.test-name
            = @user.nickname
          .mypage-content-number
            .evaluation
              評価
              %span.count 0
            .exhibition
              出品数
              %span.count
                = @user.items.count
      .tabs
        %ul.content-tabs
          %li.information
            %h3
              = link_to '#', class: 'content-btn' do
                お知らせ
          %li.todo
            %h3
              = link_to '#', class: 'content-btn' do
                やることリスト
        .tab-boxs
          %ul{id: 'tab-box-notification', class: 'tab-box'}
            %li.tab-box__item
              = link_to '#', class: 'tab-box__item__link' do
                .tab-box__item__icon
                  = image_tag asset_path('icon_brand.png'), class: "icon"
                .tab-box__item__link__body
                  .tab-box__item__link__body__text
                    《この通知を受け取ったあなた限定》「500ポイントバック」のクーポンをプレゼントしました！
                  .tab-box__item__link__body__time
                    = icon('far', 'clock')
                    %span 1日前
              = icon('fas', 'angle-right', class: 'arrow')
            %li.tab-box__item
              = link_to '#', class: 'tab-box__item__link' do
                = image_tag asset_path('icon_brand.png'), class: "icon"
                .tab-box__item__link__body
                  .tab-box__item__link__body__text
                    事務局から個別メッセージ「ログイン通知」
                  .tab-box__item__link__body__time
                    = icon('far', 'clock')
                    %span 1日前
              = icon('fas', 'angle-right', class: 'arrow')

            %li.tab-box__list
              = link_to '一覧を見る', '#'
      .second-tabs
        %h2.second-tabs-head 購入した商品
        %ul.content-tabs
          %li.transactions
            %h3
              = link_to '#', class: 'content-btn' do
                取引中
          %li.post-transactions
            %h3
              = link_to '#', class: 'content-btn' do
                過去の取引
        .tab-boxs
          %ul{id: 'tab-box-during-trading', class: 'tab-box'} 
            %li.during-trading
              取引中の商品がありません

